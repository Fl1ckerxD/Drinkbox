@model Dictionary<int, int>
<link rel="stylesheet" href="~/css/purchase.css" asp-append-version="true" />

<div class="thank-you-container">
    <h1>Спасибо за покупку!</h1>

    <div class="change-amount">
        <span>Пожалуйста, возьмите вашу сдачу: </span>
        <span class="amount">@(Model.Sum(c => c.Value * c.Key)) руб.</span>
    </div>

    <div class="coins-section">
        <h2>Ваши монеты:</h2>
        <div class="coins-grid">
            @foreach (var coin in Model)
            {
                <div class="coin-row">
                    <svg width="55" height="55" viewBox="0 0 32 32">
                        <circle cx="16" cy="16" r="14" fill="#e0e0e0" stroke="#333" stroke-width="1" />
                        <text x="16" y="18" font-size="16" font-weight="bold"
                              fill="black" text-anchor="middle" dominant-baseline="middle">@coin.Key</text>
                    </svg>
                    <span>@coin.Value шт.</span>
                </div>
            }
        </div>
    </div>

    <a href="/" class="catalog-button">
        Каталог напитков
    </a>
</div>